                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/tops"
                android:onClick="topsOnClick"
