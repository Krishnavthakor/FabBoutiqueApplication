                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bottoms"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
